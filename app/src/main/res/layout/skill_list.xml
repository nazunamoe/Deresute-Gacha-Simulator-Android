<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:weightSum="0.5">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="center"
            android:text="@string/Skill" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/Skill_ScoreBonus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_ScoreBonus"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_ComboBonus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_ComboBonus"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_ComboSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_PerfectComboSupport"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_LifeRecovery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_LifeRecovery"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_DamageGuard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_DamageGuard"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_Overload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_OverLoad"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_Concentration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_Concentration"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_Coordinate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_Coordinate"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_SkillBoost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_SkillBoost"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_Focus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_Focus"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_AllRounder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_AllRounder"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_Encore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_Encore"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_LifeSparkle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_LifeSparkle"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_Tuning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_Tuning"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_LongAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_LongAct"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_FlickAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_FlickAct"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_SlideAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_SlideAct"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_Ensemble"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_Ensemble"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_VocalMotif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_VocalMotif"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_DanceMotif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_DanceMotif"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_VisualMotif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_VisualMotif"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_TricolorSymphony"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_TricolorSymphony"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_TricolorSynergy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_TricolorSynergy"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/Skill_Alternate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Skill_Alternate"
                    android:textAlignment="center" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>