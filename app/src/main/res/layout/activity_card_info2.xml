<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nazunamoe.deresutegachasimulatorm.Activity.CardInfoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        card:layout_constraintBottom_toTopOf="@+id/cardlistcard"
        card:layout_constraintEnd_toStartOf="parent"
        card:layout_constraintStart_toStartOf="parent"
        card:layout_constraintTop_toTopOf="parent"
        card:layout_constraintVertical_weight="1"
        card:title="@string/CardInfo" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/idolinfo1stbox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/idolinfo2ndbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar5">

        <android.support.v7.widget.CardView
            android:id="@+id/idolinfo1stview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            card:cardCornerRadius="16dp"
            card:cardElevation="2dp"
            card:cardUseCompatPadding="true"
            card:contentPadding="4dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/idolinfo2ndbox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/idolinfo3rdbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.26"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idolinfo1stbox">

        <android.support.v7.widget.CardView
            android:id="@+id/idolinfo2ndview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            card:cardCornerRadius="16dp"
            card:cardElevation="2dp"
            card:cardUseCompatPadding="true"
            card:contentPadding="4dp"
            card:layout_constraintBottom_toTopOf="@+id/cardView2"
            card:layout_constraintEnd_toEndOf="parent"
            card:layout_constraintHeight_percent="0.05"
            card:layout_constraintStart_toStartOf="parent"
            card:layout_constraintTop_toBottomOf="@+id/include4"
            card:layout_constraintVertical_chainStyle="packed" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/idolinfo3rdbox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/idolinfo4thbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idolinfo2ndbox">

        <android.support.v7.widget.CardView
            android:id="@+id/idolinfo3rdview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            card:cardCornerRadius="16dp"
            card:cardElevation="2dp"
            card:cardUseCompatPadding="true"
            card:contentPadding="4dp"
            card:layout_constraintBottom_toTopOf="@+id/cardView2"
            card:layout_constraintEnd_toEndOf="parent"
            card:layout_constraintHeight_percent="0.05"
            card:layout_constraintStart_toStartOf="parent"
            card:layout_constraintTop_toBottomOf="@+id/include4"
            card:layout_constraintVertical_chainStyle="packed" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/idolinfo4thbox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idolinfo3rdbox">

        <android.support.v7.widget.CardView
            android:id="@+id/idolinfo4thview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            card:cardCornerRadius="16dp"
            card:cardElevation="2dp"
            card:cardUseCompatPadding="true"
            card:contentPadding="4dp"
            card:layout_constraintBottom_toTopOf="@+id/cardView2"
            card:layout_constraintEnd_toEndOf="parent"
            card:layout_constraintHeight_percent="0.05"
            card:layout_constraintStart_toStartOf="parent"
            card:layout_constraintTop_toBottomOf="@+id/include4"
            card:layout_constraintVertical_chainStyle="packed" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
